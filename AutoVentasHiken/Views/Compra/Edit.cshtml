@model AutoVentasHiken.Models.Compra

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Compra</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id_Compra)

        <div class="form-group">
            @Html.LabelFor(model => model.id_Vehiculo, "id_Vehiculo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_Vehiculo", String.Empty)
                @Html.ValidationMessageFor(model => model.id_Vehiculo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_Usuario, "id_Usuario", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_Usuario", String.Empty)
                @Html.ValidationMessageFor(model => model.id_Usuario)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fechaCompra, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaCompra)
                @Html.ValidationMessageFor(model => model.fechaCompra)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
